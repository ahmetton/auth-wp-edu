# Database
# For development with SQLite (local)
DATABASE_URL="file:./dev.db"
# For production with PostgreSQL (recommended for Vercel)
# DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# NextAuth Configuration
# REQUIRED: Set this to your production URL on Vercel
NEXTAUTH_URL="http://localhost:3000"
# REQUIRED: Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"

# OAuth Providers (Optional - leave empty to disable)
# Google OAuth - Get from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Facebook OAuth - Get from https://developers.facebook.com/
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# SMTP Configuration (Optional - for password reset emails)
# Leave empty to log reset tokens to console in development
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@example.com"
